{
    "author": "Austin Cheney",
    "bin": "./bin/aphorio.js",
    "bugs": {
        "url": "https://github.com/prettydiff/aphorio/issues"
    },
    "command": "share",
    "cspell": {
        "dictionaryDefinitions": [
            {
                "name": "custom-words",
                "path": "./.words",
                "addWords": true
            }
        ],
        "dictionaries": ["custom-words"],
        "ignorePaths": ["node_modules", "./.words"]
    },
    "description": "WebSocket first web server, HTTP over WebSockets.",
    "dependencies": {
        "@lydell/node-pty": "1.0.2",
        "@xterm/xterm": "^6.0.0",
        "chart.js": "^4.5.1",
        "jschardet": "^3.1.4"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin-ts": "^4.4.1",
        "@types/node": "^25.0.8",
        "eslint": "^9.39.2",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0"
    },
    "directories": {
        "bin": "./bin",
        "lib": "./lib"
    },
    "keywords": [],
    "license": "AGPL-3.0-only",
    "main": "lib/index.ts",
    "name": "aphorio",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/prettydiff/aphorio.git"
    },
    "scripts": {
        "lint":   "node ./node_modules/eslint/bin/eslint.js ./",
        "server": "node ./lib/index.ts",
        "test":   "node ./lib/index.ts test",
        "tsc":    "node ./node_modules/typescript/bin/tsc --pretty"
    },
    "types": "/lib/typescript",
    "type": "module",
    "version": "0.2.5"
}
